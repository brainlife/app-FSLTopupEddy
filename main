#!/bin/bash
#PBS -l nodes=1:ppn=4,walltime=3:00:00
#PBS -N eddy-correct
#PBS -l vmem=16gb
#PBS -V

# needs mrtrix3 container for eddy_openmp
time singularity exec -e docker://brainlife/mrtrix3:3.0_RC3 ./eddy-correct.sh

if [ -s ./dwi/dwi.nii.gz ];
then
	echo 0 > finished
else
	echo "output missing"
	echo 1 > finished
	exit 1
fi
